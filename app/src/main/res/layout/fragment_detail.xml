<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ui.fragments.detail.DetailFragment">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.utils.widget.ImageFilterButton
            android:id="@+id/btn_image"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/arrow"
            android:minWidth="48dp"
            android:minHeight="48dp"
            app:layout_constraintStart_toStartOf="parent" />

        <TextClock
            android:id="@+id/date"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:padding="5dp"
            android:layout_marginTop="15sp"
            android:textColor="@color/white"
            android:textSize="15sp" />

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/black"
        android:text="готово"
        android:textColor="@color/o"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/nam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:hint="Заголовок:"
        android:minHeight="48dp"
        android:textStyle="bold"
        android:textColor="@color/wg"
        android:textColorHint="@color/wg"
        app:layout_constraintTop_toBottomOf="@id/layout"
        tools:ignore="SpeakableTextPresentCheck"
        tools:layout_editor_absoluteX="15dp" />

    <EditText
        android:id="@+id/tex"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:textColor="@color/wg"
        android:textColorHint="@color/wg"
        android:layout_marginStart="12dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="12dp"
        android:gravity="top"
        android:padding="17dp"
        app:layout_constraintTop_toBottomOf="@id/nam" />

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <RadioButton
            android:id="@+id/btn_black_2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:background="@drawable/black"
            app:layout_constraintStart_toStartOf="parent" />

        <RadioButton
            android:id="@+id/btn_fashionable"
            android:layout_width="100dp"
            android:background="@drawable/white"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp" />

        <RadioButton
            android:id="@+id/btn_burgundy"
            android:layout_width="100dp"
            android:background="@drawable/red"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="45dp" />

    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>

